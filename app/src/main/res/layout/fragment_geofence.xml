<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".eazytime.geofence.GeoFenceFragment">


    <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="100dp"
            android:id="@+id/iv_noGeofence"
            tools:src="@drawable/ic_geofence"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_noGeofence"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.3"
            android:contentDescription="@string/geofence_icon"/>
    <TextView
            android:text="@string/no_geofences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_noGeofence"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_noGeofence"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_noGeofenceHint"
            android:textSize="18sp"
            app:layout_constraintVertical_bias="0.3"/>
    <TextView
            android:text="@string/no_geofence_added_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_noGeofenceHint"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_noGeofence"
            app:layout_constraintVertical_bias="0.3"/>

    <ListView
            android:id="@+id/lv_geofences"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
    />

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_addGeofence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/eazyTime_colorBrand"
            />
</android.support.constraint.ConstraintLayout>