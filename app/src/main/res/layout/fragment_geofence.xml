<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".eazytime.geofence.GeoFenceFragment"
        android:id="@+id/geoFenceFragment">


    <ListView
            android:id="@+id/lv_geofences"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    />

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_addGeofence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eazyTime_floatingActionButton_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_add"
            app:backgroundTint="@color/eazyTime_colorBrand"
            />
</android.support.constraint.ConstraintLayout>