<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".eazytime.calendar.detail.CalendarDetailActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/calendar_detail_total_hours_layout"
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="@dimen/eazyTime_height_content_list_elements"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/lv_calendar_detail"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
        <TextView
                android:id="@+id/calendar_detail_total_hours_label"
                android:layout_width="@dimen/eazyTime_label_width_calendar_detail"
                android:layout_height="0dp"
                app:layout_constraintRight_toLeftOf="@id/calendar_detail_total_hours_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:padding="@dimen/eazyTime_padding_text_views_list_elements"
                android:textSize="@dimen/eazyTime_text_size_time_project_list_item"/>
        <TextView
                android:id="@+id/calendar_detail_total_hours_content"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/calendar_detail_total_hours_label"
                android:padding="@dimen/eazyTime_padding_text_views_list_elements"
                android:textSize="@dimen/eazyTime_text_size_time_project_list_item"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ListView
            android:id="@+id/lv_calendar_detail"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calendar_detail_total_hours_layout"
            android:layout_height="0dp">
    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>