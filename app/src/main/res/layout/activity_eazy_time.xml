<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".eazytime.EazyTimeActivity">


    <FrameLayout
            android:id="@+id/frame_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/eazy_time_navigation"
            android:layout_height="0dp"
            android:layout_width="0dp"/>


    <android.support.design.widget.BottomNavigationView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/eazy_time_navigation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="start"
            app:menu="@menu/eazy_time_navgation"
            app:layout_constraintTop_toBottomOf="@id/frame_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:itemBackground="@color/eazyTime_colorBrand"
            app:itemIconTint="@color/eazy_time_bottom_navigation"
            app:itemTextColor="@color/eazy_time_bottom_navigation"
            />
</android.support.constraint.ConstraintLayout>